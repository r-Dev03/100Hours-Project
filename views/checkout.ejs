    <nav class="mini-cart">
        <ul>
            <% if(userCart[0]) { %>
                <% userCart.forEach(el => { %>
                    <li class="item" data-id="<%= el.id %>">
                     <img src="<%= el.img %>" alt="">
                     <span><%= el.name %></span>
                     <span><%= el.size %> -></span>
                     <span>x<%= el.qty %></span>
                     <a href="#" class="del"><i class="fa-solid fa-square-minus"></i></a>
                    </li>
                <%})%>
                <%} else {%>
                 <li><span>No Armor Equipped...</span></li>
            <% } %>
        </ul>
        <div class = "flex"><a href="checkout"><button class="btn btn-pushable btn-pushable--black">Proceed To Checkout</button></a></div>
