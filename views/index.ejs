		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Clothing Store</title>

		<!-- external CSS link -->
		<link rel="stylesheet" href="css/normalize.css">
		<link rel="stylesheet" href="css/style.css">
		<link rel="stylesheet" href="css/loader.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	</head>
	<body>

		<!--Loader-->

		<div class= "loader">_Booting</div>
	<section class="main">
		<!--Navigation--> 
		<section class="navbar">
			<div class="container flex">
				<h1 class="logo">Character Select</h1>
				<nav>
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="support">Support</a></li>
						<li><a href="#"><i class="fa-solid fa-cart-shopping" id="cart"></i></a></li>
						<li><a href="signup"><i class="fa-regular fa-user"></i></a></li>
					</ul>
				</nav>
			</div>
		</section>

		<nav class="mini-cart">
			<ul>
				<% if(userCart[0]) { %>
					<% userCart.forEach(el => { %>
						<li class="item">
						 <img src="<%= el.img %>" alt="">
						 <span><%= el.name %></span>
						 <span>x<%= el.qty %></span>
						</li>
					<%})%>
					<%} else {%>
					 <li class="item"><span>No Armor Equipped...</span></li>
				<% } %>
			</ul>
